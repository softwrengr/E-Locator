<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey"
    tools:context=".fragments.AddStoreFragment">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@drawable/background">

        </RelativeLayout>

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15sp"
                android:layout_marginRight="15sp"
                android:layout_marginTop="70sp"
                android:layout_marginBottom="20dp"
                android:padding="10dp"
                android:background="@drawable/layout_back"
                android:orientation="vertical">

                <FrameLayout
                    android:id="@+id/image_store"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp">

                    <ImageView
                        android:id="@+id/iv_store"
                        android:layout_width="match_parent"
                        android:layout_height="120sp"
                        android:layout_below="@id/title"
                        android:layout_marginTop="10sp"
                        android:scaleType="fitXY"
                        android:src="@drawable/garments" />


                    <ImageView
                        android:id="@+id/iv_add_store"
                        android:layout_width="60sp"
                        android:layout_height="50sp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="10dp"
                        android:scaleType="fitXY"
                        android:layout_gravity="bottom|right"
                        android:src="@drawable/upload" />


                </FrameLayout>
                <EditText
                    android:id="@+id/et_title"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@+id/image_store"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10sp"
                    android:layout_marginRight="20dp"
                    android:textSize="16sp"
                    android:background="@drawable/edittext_back"
                    android:hint="Name"
                    android:fontFamily="@font/regular"
                    android:inputType="text"
                    android:paddingLeft="10sp" />

                <EditText
                    android:id="@+id/et_contact"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@+id/et_title"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10sp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/edittext_back"
                    android:hint="Contact"
                    android:textSize="16sp"
                    android:fontFamily="@font/regular"
                    android:inputType="text"
                    android:paddingLeft="10sp" />

                <EditText
                    android:id="@+id/et_Address"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_below="@+id/et_contact"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10sp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/edittext_back"
                    android:hint="Address"
                    android:gravity="top"
                    android:textSize="16sp"
                    android:fontFamily="@font/regular"
                    android:inputType="text"
                    android:paddingLeft="10sp" />

                <RelativeLayout
                    android:id="@+id/dropdown"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@id/et_Address"
                    android:background="@drawable/edittext_back"
                    android:layout_marginRight="20sp"
                    android:layout_marginLeft="20sp"
                    android:layout_marginTop="15sp">

                    <Spinner
                        android:id="@+id/spinner_category"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:pointerIcon="vertical_double_arrow"
                        android:textStyle="normal"></Spinner>

                </RelativeLayout>


                <Button
                    android:id="@+id/btn_register"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/dropdown"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20sp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="10sp"
                    android:background="@color/blue"
                    android:paddingLeft="10sp"
                    android:text="Register"
                    android:textColor="@color/white" />


            </RelativeLayout>
        </ScrollView>

    </FrameLayout>



</RelativeLayout>